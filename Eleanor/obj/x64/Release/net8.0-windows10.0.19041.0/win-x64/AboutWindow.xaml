<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Eleanor.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eleanor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About Eleanor">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar x:ConnectionId='2' x:Name="TitleBar" Title="About Eleanor">
            <TitleBar.IconSource>
                <ImageIconSource x:ConnectionId='3' x:Name="AppIcon"
                    ImageSource="ms-appx:///Assets/eslo0.png" />
            </TitleBar.IconSource>
        </TitleBar>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="100" Height="100">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Assets/eslo0.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle Height="10" />
            <TextBlock HorizontalAlignment="Center">developed and maintained by</TextBlock>
            <TextBlock FontWeight="Black" FontSize="20" HorizontalAlignment="Center">axeinstd</TextBlock>
            <Rectangle Height="5"/>
            <Rectangle Height="1" Fill="AliceBlue"/>
            <Rectangle Height="5"/>
            <TextBlock HorizontalAlignment="Center" FontWeight="SemiBold">powered by Zapret</TextBlock>
            <TextBlock HorizontalAlignment="Center">https://github.com/bol-van/zapret/</TextBlock>
        </StackPanel>
        
    </Grid>
</Window>

