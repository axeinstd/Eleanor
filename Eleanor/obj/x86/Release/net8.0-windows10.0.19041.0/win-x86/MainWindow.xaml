<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Eleanor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Eleanor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    Title="Eleanor">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:ConnectionId='2' x:Name="TitleBar" Title="Eleanor" Subtitle="by axeinstd">
            <TitleBar.IconSource>
                <ImageIconSource x:ConnectionId='5' x:Name="AppIcon"
                    ImageSource="ms-appx:///Assets/Square44x44Logo.scale-100.png" />
            </TitleBar.IconSource>
        </TitleBar>

        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            
            
            <TextBlock x:ConnectionId='3' VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"
x:Name="WelcomeText" FontSize="30" FontWeight="Bold">Welcome to Eleanor</TextBlock>
            <ToggleButton x:ConnectionId='4' VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"
        x:Name="ToggleBtn"                        >Connect</ToggleButton>
        </Grid>
    </Grid>
</Window>

